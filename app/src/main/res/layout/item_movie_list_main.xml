<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="@drawable/recycle_item_selector">

    <ImageView
        android:id="@+id/iv_movie_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_thumbnail_dimen"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:transitionName="@string/transition_thumbnail_to_poster" />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/half_transparent_black"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/white"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>